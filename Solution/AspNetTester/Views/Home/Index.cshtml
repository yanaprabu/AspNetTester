@{
    ViewBag.Title = "Landing Page";
}

<section id="page-content" class="white-bg" data-0="margin-top:0px;" data-100p="margin-top:-180px;" data-200p="margin-top:-360px;">

    <!-- Diagonal Line -->
    <div class="d-line diagonal-1" data-0="top:200px;" data-100p="top:400px;" data-200p="top:800px;" data-300p="top:1200px;"></div>
    <div class="d-line diagonal-2" data-0="top:700px;" data-100p="top:900px;" data-200p="top:1300px;" data-300p="top:1700px;" data-400p="top:2200px;"></div>
