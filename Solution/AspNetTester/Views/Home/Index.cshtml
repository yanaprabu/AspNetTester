                <a href="#next-sec" data-scroll data-options='{ "easing": "linear" }' class="link-to green">
                    <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span>
                </a>
            </article>
            <figure class="col-md-4 col-md-offset-1">
                <img src="~/images/w-phone-1.png" alt="Phone" title="Phone">
            </figure>
        </div>
        <div id="next-sec" class="row topcon wow bounceInRight">
            <figure class="col-md-3 col-md-offset-1">
                <img src="~/images/w-phone-2.png" alt="Phone" title="Phone">
            </figure>
            <article class="col-md-5 col-md-offset-1 post-content">
