                    <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span>
                </a>
            </article>
        </div>
        <!-- Top Content end -->

        @Html.Partial("_Carousel")

        <div class="block-center wow fadeInDown">
            <a href="#form-section" data-scroll data-options='{ "easing": "linear" }' class="link-to green center-pos">
                <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span>
            </a>
        </div>

    </div>
